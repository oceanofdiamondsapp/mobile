<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "com.oceanofdiamonds.app"
        versionCode = "10" 
        version     = "1.0.0" >

    <!-- Meta -->
    <name>Ocean of Diamonds</name>
    <description>Create your own jewelry with a tap and a photo.</description>
    <author href="" email=""></author>

    <access origin="*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="tel:*" />
    
    <!-- Phonegap Build Platforms -->
    <gap:platform name="ios" />

    <!-- Plugins -->
    <plugin name="cordova-plugin-statusbar" />
    <plugin name="cordova-plugin-camera" />
    <plugin name="cordova-plugin-device" />
    <plugin name="cordova-plugin-dialogs" />
    <plugin name="cordova-plugin-inappbrowser" />
    <plugin name="cordova-plugin-whitelist" />
    <!-- <plugin name="com.phonegap.plugins.pushplugin" source="pgb" spec="2.5.0" /> -->
    <!-- <gap:plugin name="nl.x-services.plugins.ioswebviewcolor" version="1.1" /> -->
    <!-- To take example photos of the expected jewelry product -->
    
    <!-- Fallback Icon and Splash -->
    <gap:splash src="icon.png" />
    <gap:splash src="splash.png" />

    <!-- Multi-Platform Preferences -->
    <preference name="webviewbounce" value="false"/>
    <preference name="UIWebViewBounce" value="false"/>
    <preference name="DisallowOverscroll" value="true"/>
    <preference name="android-minSdkVersion" value="16"/>
    <preference name="BackupWebStorage" value="none"/>
    <preference name="orientation" value="portrait" />
    <preference name="phonegap-version" value="3.7.0" />
    <preference name="fullscreen" value="false" />
    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="StatusBarBackgroundColor" value="#000000"/>
    <preference name="StatusBarStyle" value="lightcontent" />

    <!-- iOS Preferences -->
    <preference name="target-device" value="handset" />
    <preference name="prerendered-icon" value="true" />
    <preference name="detect-data-types" value="false" />
    <preference name="deployment-target" value="7.0" />

    <!-- iOS 7.0+ Icons -->
    <icon src="assets/icon/ios/icon-60@3x.png" gap:platform="ios" width="180" height="180" /> <!-- iPhone 6 / 6+ -->
    <icon src="assets/icon/ios/icon-60.png" gap:platform="ios" width="60" height="60" /> <!-- iPhone / iPod Touch  -->
    <icon src="assets/icon/ios/icon-60@2x.png" gap:platform="ios" width="120" height="120" /> <!-- iPhone / iPod Touch  -->
    <icon src="assets/icon/ios/icon-76.png" gap:platform="ios" width="76" height="76" /> <!-- iPad -->
    <icon src="assets/icon/ios/icon-76@2x.png" gap:platform="ios" width="152" height="152" /> <!-- iPad -->
    <icon src="assets/icon/ios/icon-small.png" gap:platform="ios" width="29" height="29" /> <!-- Settings Icon -->
    <icon src="assets/icon/ios/icon-small@2x.png" gap:platform="ios" width="58" height="58" /> <!-- Settings Icon -->
    <icon src="assets/icon/ios/icon-40.png" gap:platform="ios" width="40" height="40" /> <!-- Spotlight Icon -->
    <icon src="assets/icon/ios/icon-40@2x.png" gap:platform="ios" width="80" height="80" /> <!-- Spotlight Icon -->

    <!-- iOS 6.1 Icon -->
    <icon src="assets/icon/ios/icon.png" gap:platform="ios" width="57" height="57" /> <!-- iPhone / iPod Touch -->
    <icon src="assets/icon/ios/icon@2x.png" gap:platform="ios" width="114" height="114" /> <!-- iPhone / iPod Touch -->
    <icon src="assets/icon/ios/icon-72.png" gap:platform="ios" width="72" height="72" /> <!-- iPad -->
    <icon src="assets/icon/ios/icon-72@2x.png" gap:platform="ios" width="144" height="144" /> <!-- iPad -->
    <icon src="assets/icon/ios/icon-small.png" gap:platform="ios" width="29" height="29" />  <!-- iPhone Spotlight and Settings Icon -->
    <icon src="assets/icon/ios/icon-small@2x.png" gap:platform="ios" width="58" height="58" /> <!-- iPhone Spotlight and Settings Icon -->
    <icon src="assets/icon/ios/icon-50.png" gap:platform="ios" width="50" height="50" /> <!-- iPad Spotlight and Settings Icon -->
    <icon src="assets/icon/ios/icon-50@2x.png" gap:platform="ios" width="100" height="100" /> <!-- iPad Spotlight and Settings Icon -->
    
    <!-- iOS Splash -->
    <splash src="assets/splash/ios/Default.png" gap:platform="ios" width="320" height="480" /> <!-- iPhone and iPod touch -->
    <splash src="assets/splash/ios/Default@2x.png" gap:platform="ios" width="640" height="960" /> <!-- iPhone and iPod touch -->
    <splash src="assets/splash/ios/Default-568h@2x.png" gap:platform="ios" width="640" height="1136" /> <!-- iPhone 5 / iPod Touch (5th Generation) -->
    <splash src="assets/splash/ios/Default-667h@2x.png" gap:platform="ios" width="750" height="1334" /> <!-- iPhone 6 -->
    <splash src="assets/splash/ios/Default-Portrait-736h@3x.png" gap:platform="ios" width="1242" height="2208" /> <!-- iPhone 6 -->
    <splash src="assets/splash/ios/Default-Landscape-736h@3x.png" gap:platform="ios" width="2208" height="1242" /> <!-- iPhone 6 -->
    <splash src="assets/splash/ios/Default-Portrait.png" gap:platform="ios" width="768" height="1024" /> <!-- iPad -->
    <splash src="assets/splash/ios/Default-Landscape.png" gap:platform="ios" width="1024" height="768" /> <!-- iPad -->
    <splash src="assets/splash/ios/Default-Portrait@2x.png" gap:platform="ios" width="1536" height="2048" /> <!-- Retina iPad -->
    <splash src="assets/splash/ios/Default-Landscape@2x.png" gap:platform="ios" width="2048" height="1536" /> <!-- Retina iPad -->

    <!-- Android Icons -->
    <icon src="assets/icon/android/ldpi.png" gap:platform="android" qualifier="ldpi" />
    <icon src="assets/icon/android/mdpi.png" gap:platform="android" qualifier="mdpi" />
    <icon src="assets/icon/android/hdpi.png" gap:platform="android" qualifier="hdpi" />
    <icon src="assets/icon/android/xhdpi.png" gap:platform="android" qualifier="xhdpi" />
    <icon src="assets/icon/android/xxhdpi.png" gap:platform="android" qualifier="xxhdpi" />
    <icon src="icon.png" gap:platform="android" qualifier="fr-xxhdpi" />

    <!-- Android Splash -->
    <splash src="assets/splash/android/ldpi.png" gap:platform="android" qualifier="ldpi" />
    <splash src="assets/splash/android/mdpi.png" gap:platform="android" qualifier="mdpi" />
    <splash src="assets/splash/android/hdpi.png" gap:platform="android" qualifier="hdpi" />
    <splash src="assets/splash/android/xhdpi.png" gap:platform="android" qualifier="xhdpi" />
    <splash src="splash.png" gap:platform="android" qualifier="fr-xhdpi" />
    <splash src="splash.png" gap:platform="android" qualifier="port-xxhdpi" />
    <splash src="splash.png" gap:platform="android" qualifier="land-xxhdpi" />
</widget>
